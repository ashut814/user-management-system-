<!-- include header -->
<%- include('include/_header.ejs') %>
<!-- /include header -->

<!-- Main Site -->
<main id="site-main">
  <div class="container">
    <div class="box-nav d-flex justify-between">
      <a href="/add-user" class="border-shadow">
        <span class="text-gradient">New User <i class="fas fa-user"></i></span>
      </a>
      <a href="/logout" class="border-shadow">
        <span class="text-gradient"
          >logout<i class="fa-solid fa-arrow-right-from-bracket"></i></i
        ></span>
      </a>
    </div>
    <!-- form handling -->
    <form action="/" method="POST">
      <table class="table">
        <thead class="thead-dark">
          <tr>
            <th>ID</th>
            <th>Name</th>
            <th>@Email</th>
            <th>Gender</th>
            <th>Status</th>
            <% if (isAdmin) { %>
      <th>Action</th>
    <% } %>
          </tr>
        </thead>
        <tbody>
          <%- include('include/_show') %>
        </tbody>
      </table>
    </form>
  </div>
</main>
<!-- /Main Site -->

<!-- include footer -->
<%-include('include/_footer.ejs') %>
<!-- /include footer -->
